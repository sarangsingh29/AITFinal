<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0"
  metadata-complete="true">


    <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <servlet-class>com.ooad.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>StudentSubmitServlet</servlet-name>
      <servlet-class>com.ooad.StudentSubmitServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentSubmitServlet</servlet-name>
        <url-pattern>/StudentSubmitServlet</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>StudentDisplayServlet</servlet-name>
      <servlet-class>com.ooad.StudentDisplayServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentDisplayServlet</servlet-name>
        <url-pattern>/StudentDisplayServlet</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>SecretaryServlet</servlet-name>
      <servlet-class>com.ooad.SecretaryServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>SecretaryServlet</servlet-name>
        <url-pattern>/SecretaryServlet</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>StudentServlet</servlet-name>
      <servlet-class>com.ooad.StudentServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>StudentServlet</servlet-name>
        <url-pattern>/StudentServlet</url-pattern>
    </servlet-mapping>

    <servlet>
      <servlet-name>InstructorServlet</servlet-name>
      <servlet-class>com.ooad.InstructorServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>InstructorServlet</servlet-name>
        <url-pattern>/InstructorServlet</url-pattern>
    </servlet-mapping>
</web-app>
